{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["app/src/core/*"],
      "@data/*": ["app/src/data/*"],
      "@infrastructure/*": ["app/src/infrastructure/*"],
      "@presentation/*": ["app/src/presentation/*"],
      "@store/*": ["app/src/store/*"],
      "@shared/*": ["app/src/shared/*"],
      "@components/*": ["app/src/components/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}